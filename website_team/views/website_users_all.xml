<openerp>
    <data>
        <template name="user list" id="team_template" page="True">
            <t t-call="website.layout">

                    <t t-set="title">Team </t>
                    <div class="oe_structure">
                        <div class="container">
                            <!--<t t-call="website_team.all_user_header"/>-->
                            <div class="services">
                                <div class="container-fluid">
                                    <t t-foreach="users" t-as="user">
                                         <div class="row align-items-center" style="margin-bottom: 5px">

                                            <div class="col-md-1">

                                                    <t t-if="user.partner_id.image is not None">
                                                        <img class="image" t-att-src="'data:image/png;base64,%s' % user.partner_id.image" style="border:auto; max-block-size:50px; box-shadow: 0 2px 5px rgba(51, 51, 51, 0.4);"/>
                                                    </t>

                                                    <t t-if="user.partner_id.image is None">
                                                        <img class="image" src="/website_team/static/src/img/3.png" style="border:auto; max-block-size:50px; box-shadow: 0 2px 5px rgba(51, 51, 51, 0.4);"/>
                                                    </t>

                                            </div>

                                            <div class="col-md-11 align-items-center"  style="vertical-align: middle; margin-top: 15px;">

                                                    <t t-esc="user.name"/> - <a t-attf-href="/team/{{ user.username_github }}/">  <t t-esc="user.username_github"/> </a>

                                            </div>

                                        </div>

                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>

            </t>
        </template>

        <template name="user card" id="test_user" page="True">
            <t t-call="website.layout">
                <t t-set="title">  <t t-esc="user.username_github"/> card </t>
                 <div class="container">
                    <!--<t t-call="website_team.user_header"/>-->

                        <div class="services">
                            <div class="inlinning" style="position: absolute;">
                                <div class="opt_shadow">
                                    <t t-if="user.partner_id.image is not None">
                                        <img class="image" t-att-src="'data:image/png;base64,%s' % user.partner_id.image" style="border:auto; max-block-size:150px;"/>
                                    </t>

                                    <t t-if="user.partner_id.image is None">
                                        <img class="image" src="/website_team/static/src/img/3.png" style="border:auto; max-block-size:150px;"/>
                                    </t>
                                    <!--<span t-field="user.partner_id.image" t-field-options='{"widget": "image"}' />-->
                                </div>
                            </div>
                            <div class="inlinning" style="padding-left: 170px">
                                <p>
                                    <h4>Profile</h4>
                                </p>
                                <p>
                                    Name: <t t-esc="user.name"/>
                                </p>
                                <p>
                                    Login: <t t-esc="user.login"/>
                                </p>
                                <p>
                                    Language:  <t t-esc="user.partner_id.lang"/>
                                </p>

                                <!--<p>-->
                                    <!--Email: <t t-esc="user.email"/>-->
                                <!--</p>-->
                                <!--<p t-if="user.username_twitter">-->
                                    <!--Twitter: <a t-attf-href="https://twitter.com/{{ user.username_twitter }}/">  <t t-esc="user.username_twitter"/> </a>-->
                                <!--</p>-->
                                <!--<p>-->
                                    <!--GitHub:  <a t-attf-href="https://github.com/{{ user.username_github }}/">  <t t-esc="user.username_github"/> </a>-->
                                <!--</p>-->
                                <p>
                                    <h4>Contact information</h4>
                                </p>
                                <p>
                                    <i class="fa fa-envelope"></i>  <span t-field="user.email"></span>
                                </p>
                                <p t-if="user.username_work_email">
                                    Work Email: <t t-esc="user.username_work_email"/>
                                </p>
                                <p t-if="user.partner_id.phone">
                                    <!--Phone number:  <t t-esc="user.partner_id.phone"/>-->
                                    <i class="fa fa-phone"></i> <span t-field="user.partner_id.phone"></span>

                                </p>
                                <p t-if="user.url_upwork">
                                    Upwork:  <a t-attf-href="{{ user.url_upwork }}/">  <t t-esc="user.url_upwork"/> </a>
                                </p>
                                <h2>
                                    <a t-attf-href="https://twitter.com/{{ user.username_twitter }}/" t-if="user.username_twitter"><i class="fa fa-twitter"/></a>
                                    <a t-attf-href="https://github.com/{{ user.username_github }}/" t-if="user.username_github"><i class="fa fa-github"/></a>
                                </h2>
                         </div>
                    </div>
                </div>
              </t>
        </template>

    </data>
</openerp>
