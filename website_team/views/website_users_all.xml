<openerp>
    <data>
        <template name="user list" id="team_template" page="True">
            <t t-call="website.layout">

                    <t t-set="title">Team </t>
                    <div class="oe_structure">
                        <div class="container">
                            <t t-call="website_team.all_user_header"/>
                            <div class="services">

                                <t t-foreach="users" t-as="user">
                                    <p>
                                        <!--<a t-attf-href="/team/{{ user.name }}/">  <t t-esc="user.name"/> </a> - -->
                                        <t t-esc="user.name"/> - <a t-attf-href="/team/{{ user.username_github }}/">  <t t-esc="user.username_github"/> </a>
                                    </p>
                                </t>
                            </div>
                        </div>
                    </div>

            </t>
        </template>

        <template name="user card" id="test_user" page="True">
            <t t-call="website.layout">
                <t t-set="title">  <t t-esc="user.username_github"/> card </t>
                 <div class="container">
                    <t t-call="website_team.user_header"/>

                        <div class="services">
                            <div class="inlinning" style="position: absolute;">
                                <div class="opt_shadow">

                                    <t t-if="user.partner_id.image is not None">
                                        <img class="image" t-att-src="'data:image/png;base64,%s' % user.partner_id.image" style="border:auto; max-block-size:150px;"/>
                                    </t>

                                    <t t-if="user.partner_id.image is None">
                                        <img class="image" src="/website_team/static/src/img/3.png" style="border:auto; max-block-size:150px;"/>
                                    </t>

                                    <!--<span t-field="user.partner_id.image" t-field-options='{"widget": "image"}' />-->
                                </div>
                            </div>
                            <div class="inlinning" style="padding-left: 170px">
                                <p>
                                    Name: <t t-esc="user.name"/>
                              </p>
                                <p>
                                  Login: <t t-esc="user.login"/>
                              </p>
                                <p>
                                  Email: <t t-esc="user.email"/>
                              </p>
                              <p>
                                  Work Email: <t t-esc="user.username_work_email"/>
                              </p>
                              <p>
                                  Language:  <t t-esc="user.partner_id.lang"/>
                              </p>
                              <p>
                                  Active:  <t t-esc="user.active"/>
                              </p>
                              <p>
                                  Phone number:  <t t-esc="user.partner_id.phone"/>
                              </p>
                                <p>
                                  GitHub:  <t t-esc="user.username_github"/>
                              </p>
                              <p>
                                  Twitter:  <t t-esc="user.username_twitter"/>
                              </p>
                              <p>
                                  Upwork:  <t t-esc="user.url_upwork"/>
                              </p>
                         </div>
                    </div>
                </div>
              </t>
        </template>

    </data>
</openerp>
