<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<record id="fleet_open_module_tree_branch" model="ir.actions.act_window">
    <field name="name">Branches</field>
    <field name="res_model">fleet_branch.branch</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
</record>
<record id="fleet_booking_branch_form_view" model="ir.ui.view">
    <field name="name">fleet_booking.department.form</field>
    <field name="model">fleet_branch.branch</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="hr.view_department_form"/>
    <field eval="50" name="priority"/>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//sheet" position="before">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,active" clickable="True"/>
                </header>
            </xpath>
            <xpath expr="//group[@col='4']/field[@name='name']" position="attributes">
                <attribute name="string">Branch name</attribute>
            </xpath>
            <xpath expr="//group[@col='4']/field[@name='manager_id']" position="attributes">
                <attribute name="string">Branch Officer</attribute>
            </xpath>
            <xpath expr="//group[@col='4']/field[@name='parent_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[@col='4']" position="inside">
                <field name="city"/>
                <field name="phone"/>
                <field name="branch_target"/>
            </xpath>
        </data>
    </field>
</record>
<menuitem id="menu_fb_one" parent="fleet.fleet_configuration" name="Branches" sequence="100" action="fleet_open_module_tree_branch"/>

</data>
</openerp>