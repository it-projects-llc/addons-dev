<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="fleet_open_module_tree_branch" model="ir.actions.act_window">
      <field name="name">Branches</field>
      <field name="res_model">fleet_branch.branch</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="fleet_booking_branch_form_view" model="ir.ui.view">
      <field name="name">fleet_booking.department.form</field>
      <field name="model">fleet_branch.branch</field>
      <field name="arch" type="xml">
        <form string="fleet rental branch">
          <header>
            <field name="state" widget="statusbar" statusbar_visible="new,active" clickable="True"/>
          </header>
          <sheet>
            <group col="4">
              <field name="name"/>
              <field name="city"/>
              <field name="phone"/>
              <field name="branch_target"/>
              <field name="branch_officer_ids" widget="many2many_tags" readonly="True"/>
            </group>
            <group string="Accounting">
              <field name="cash_account_id"/>
              <field name="bank_account_id"/>
              <field name="deposit_account_id"/>
              <field name="rental_account_id"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <menuitem id="menu_fb_one" parent="fleet.fleet_configuration" name="Branches" sequence="100" action="fleet_open_module_tree_branch"/>

  </data>
</openerp>
