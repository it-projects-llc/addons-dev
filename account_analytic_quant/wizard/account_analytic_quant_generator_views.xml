<odoo>
    <record model="ir.ui.view" id="analytic_quant_generator_form_view">
        <field name="name">account.analytic.quant.generator.form</field>
        <field name="model">account.analytic.quant.generator</field>
        <field name="arch" type="xml">
            <form string="Generator">
                <group>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="quant_amount"/>
                    <field name="currency_id" groups="base.group_multi_currency"/>
                </group>
                <footer>
                    <button name="apply" string="Generate" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="analytic_quant_generator_action" model="ir.actions.act_window">
        <field name="name">Generator</field>
        <field name="res_model">account.analytic.quant.generator</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        name="Generate Quants"
        parent="account.menu_finance_entries"
        action="analytic_quant_generator_action"
        id="analytic_quant_generator_menu"
        sequence="55"
        groups="base.group_no_one"/>

</odoo>
