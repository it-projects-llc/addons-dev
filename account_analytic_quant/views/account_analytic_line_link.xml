<odoo>
    <record model="ir.ui.view" id="analytic_link_search_view">
        <field name="name">account.analytic.line.link.search</field>
        <field name="model">account.analytic.line.link</field>
        <field name="arch" type="xml">
            <search>
                <field name="income_id"/>
                <field name="expense_id"/>
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="analytic_link_tree_view">
        <field name="name">account.analytic.line.link.tree</field>
        <field name="model">account.analytic.line.link</field>
        <field name="arch" type="xml">
            <tree>
                <field name="weight"/>
                <field name="income_id"/>
                <field name="expense_id"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="analytic_link_form_view">
        <field name="name">account.analytic.line.link.form</field>
        <field name="model">account.analytic.line.link</field>
        <field name="arch" type="xml">
            <form string="Analytic Link">
                <group>
                    <field name="weight"/>
                    <field name="income_id"/>
                    <field name="expense_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="analytic_link_action" model="ir.actions.act_window">
        <field name="name">Analytic Link</field>
        <field name="res_model">account.analytic.line.link</field>
        <field name="view_type">form</field>
    </record>

    <menuitem
        name="Analytic Links"
        parent="account.menu_finance_entries"
        action="analytic_link_action"
        id="analytic_link_menu"
        sequence="45"
        />

</odoo>
