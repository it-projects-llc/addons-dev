<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="to_weight" position="after">
                <field name="available_in_pos"/>
                <field name="hot_product" attrs="{'invisible': [('available_in_pos', '=', False)]}"/>
                <field name="banner" widget="image" class="oe_miniprogram_banner" options="{'size': [320, 150]}" attrs="{'invisible': ['|', ('available_in_pos', '=', False), ('hot_product', '=', False)]}"/>
            </field>
        </field>
    </record>
</odoo>
