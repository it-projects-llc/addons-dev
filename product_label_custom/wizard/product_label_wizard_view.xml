<odoo>

    <record id="product_labels_wizard_view" model="ir.ui.view">
        <field name="name">Product Labels</field>
        <field name="model">product.label.wizard</field>
        <field name="arch" type="xml">
            <form string="Products Labels">
                <field name="settings_ids">
                    <tree editable="bottom" create="true" delete="true">
                        <field name="product_id" required="1"/>
                        <field name="quantity" required="1"/>
                        <field name="label_id" required="1"/>
                    </tree>
                </field>
                <footer>
                    <button name="print_labels_button" string="Print" type="object" default_focus="1" class="oe_highlight" />
                    or
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>


    <act_window id="product_labels_wizard_action"
        name="Custom Product Labels"
        src_model="product.template"
        res_model="product.label.wizard"
        key2="client_action_multi"
        view_type="form" view_mode="form"
        target="new"/>

</odoo>
