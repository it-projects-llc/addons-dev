<odoo>
    <data>
        <record id="product_label_form_view" model="ir.ui.view">
            <field name="name">product.label.view.form</field>
            <field name="model">product.label</field>
            <field name="arch" type="xml">
                <form string="Product Label">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="paper_format_id"/>
                            <field name="qweb_template" widget="ace" options="{'mode': 'xml'}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
