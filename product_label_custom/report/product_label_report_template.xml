<odoo>
    <template id="report_product_label">
        <t t-set="group_list" t-value="docs.get_paper_format_groups()"/>
        <t t-foreach="group_list" t-as="group">
            <t t-call="report.html_container">
                <div class="page" t-attf-data-label-id="#{group[0].id}">
                    <t t-foreach="group" t-as="o">
                        <t t-foreach="range(0, o.quantity)" t-as="i">
                            <t t-set="product" t-value="o.product_id"/>
                            <t t-set="label" t-value="o.label_id"/>
                            <t t-set="purchase" t-value="o.purchase_id"/>
                            <t t-if="label">
                                <t t-raw="product.get_render_qweb(label, purchase)"></t>
                            </t>
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
