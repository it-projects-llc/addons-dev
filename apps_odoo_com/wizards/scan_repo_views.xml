<odoo>

<record id="scan_repo_view_form" model="ir.ui.view">
    <field name="name">scan_repo_view_form</field>
    <field name="model">apps_odoo_com.scan_repo</field>
    <field name="arch" type="xml">
        <form string="Scan Repo">
            <group>
                <field name="repo"/>
            </group>
            <footer>
                <button name="apply"
                        type="object"
                        string="Scan Repo"
                        class="oe_highlight"/>
                or
                <button special="cancel"
                        string="Cancel"/>
            </footer>
        </form>
    </field>
</record>

<record id="scan_repo_action" model="ir.actions.act_window">
    <field name="name">Scan Repo</field>
    <field name="res_model">apps_odoo_com.scan_repo</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

<record id="scan_repo_menu" model="ir.ui.menu">
    <field name="action" ref="scan_repo_action"/>
</record>

</odoo>
