<openerp>
<data>

<record id="add_repos_view_form" model="ir.ui.view">
    <field name="name">add_repos_view_form</field>
    <field name="model">apps_odoo_com.add_repos</field>
    <field name="arch" type="xml">
        <form string="Add Repos">
            <group>
                <field name="version"/>
            </group>
            <label for="repos"/>
            <field name="repos" placeholder="https://github.com/OCA/website"/>
            <footer>
                <button name="apply"
                        type="object"
                        string="Add Repos"
                        class="oe_highlight"/>
                or
                <button special="cancel"
                        string="Cancel"/>
            </footer>
        </form>
    </field>
</record>

<record id="add_repos_action" model="ir.actions.act_window">
    <field name="name">Add Repos</field>
    <field name="res_model">apps_odoo_com.add_repos</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

<record id="add_repos_menu" model="ir.ui.menu">
    <field name="action" ref="add_repos_action"/>
</record>

</data>
</openerp>
