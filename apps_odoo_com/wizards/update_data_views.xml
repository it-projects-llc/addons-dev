<openerp>
<data>

<record id="update_data_view_form" model="ir.ui.view">
    <field name="name">update_data_view_form</field>
    <field name="model">apps_odoo_com.update_data</field>
    <field name="arch" type="xml">
        <form string="Scan Repo">
            <footer>
                <button name="get_new_data"
                        type="object"
                        string="Pull new data"
                        class="oe_highlight"/>
                <button name="get_all_data"
                        type="object"
                        string="Update All"
                        />
                or
                <button special="cancel"
                        string="Cancel"/>
            </footer>
        </form>
    </field>
</record>

<record id="update_data_action" model="ir.actions.act_window">
    <field name="name">Update Data</field>
    <field name="res_model">apps_odoo_com.update_data</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

<record id="update_data_menu" model="ir.ui.menu">
    <field name="action" ref="update_data_action"/>
</record>

</data>
</openerp>
