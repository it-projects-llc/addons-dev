<openerp>
<data>

<record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">apps_odoo_com.settings</field>
    <field name="model">apps_odoo_com.settings</field>
    <field name="arch" type="xml">
        <form string="Odoo App Store Settings" class="oe_form_configuration">
            <header>
                <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                or
                <button string="Cancel" type="object" name="cancel" class="oe_link"/>
            </header>
            <group string="Credentials">
                <field name="apps_login"/>
                <field name="apps_password" password="True"/>
            </group>
        </form>
    </field>
</record>

<record id="res_config_settings_action" model="ir.actions.act_window">
    <field name="name">Odoo App Store Settings</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">apps_odoo_com.settings</field>
    <field name="view_mode">form</field>
    <field name="target">inline</field>
</record>

<record id="settings_menu" model="ir.ui.menu">
    <field name="action" ref="res_config_settings_action"/>
</record>

</data>
</openerp>
