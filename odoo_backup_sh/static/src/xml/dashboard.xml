<templates id="template" xml:space="preserve">

    <t t-name="odoo_backup_sh.BackupDashboardMain">
        <div class="o_dashboards">
            <t t-call="odoo_backup_sh.dashboard_header"/>
            <div class="o_backup_dashboard_content o_kanban_view o_kanban_dashboard o_kanban_ungrouped"/>
        </div>
    </t>

    <t t-name="odoo_backup_sh.dashboard_header">
        <div class="row o_dashboard_header">
            <div class="o_box">
                <a href="#" class="o_box_item o_dashboard_action_update_info" name="odoo_backup_sh.odoo_backup_sh_backup_action" title="Update backups information.">
                    <div class="o_inner_box o_primary">
                        <i class="fa fa-refresh fa-3x"/><br/>
                        Update Info
                    </div>
                </a>
                <a href="#" class="o_box_item o_dashboard_action_up_balance" name="odoo_backup_sh.odoo_backup_sh_backup_action" title="Up to the balance.">
                    <div class="o_inner_box o_primary">
                        <span id="insufficient_credit_notice" class="hide">
                            Funds are insufficient for<br/>
                            the next subscription fee!
                        </span>
                        <i class="fa fa-money fa-3x" id="up_to_the_balance_text"/><br/>
                        Go to Balance<br/>
                    </div>
                </a>
            </div>
        </div>
    </t>

    <t t-name="odoo_backup_sh.databases">
        <t t-foreach="widget.dashboards_data.dbs" t-as="db">
            <div class="o_kanban_record">
                <div t-attf-class="o_kanban_card_header">
                    <div class="o_kanban_card_header_title">
                        <div class="o_secondary">
                            <span>Database</span>
                        </div>
                        <div class="o_primary">
                            <t t-esc="db"/>
                        </div>
                    </div>
                </div>
                <div class="container o_kanban_card_content">
                    <div class="row">
                        <div class="col-xs-6 o_kanban_primary_left">
                            <button type="object" t-att-data-name="db" class="btn btn-primary btn-sm o_dashboard_action_make_backup">
                                <span>New Backup</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </t>

</templates>
