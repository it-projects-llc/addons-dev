<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.google.drive</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="google_drive.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_google_drive_token_generated']/../../.." position="inside">
                <div class="mt8">
                    <label for="google_drive_attachment_condition" class="o_form_label o_light_label"/>
                    <field name="google_drive_attachment_condition"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
