<odoo>
    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="name">mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="button_mark_as_done_force" string="Force Mark as Done" attrs="{'invisible': ['|', ('state', 'in', ['done', 'cancel']), ('finished_move_line_ids', '=', [])]}" type="object" confirm="Are you sure?"/>
                <button name="button_apply_scrap" string="Apply Scrap %" type="object" />
            </xpath>
            <xpath expr="//field[@name='bom_id']" position="before">
                <field name="scrap_percent"/>
            </xpath>
        </field>
    </record>
</odoo>
