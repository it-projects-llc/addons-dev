        <template id="custom_external_layout" inherit_id="web.external_layout_standard">
            <xpath expr="//div[hasclass('header')]" position="attributes">
                <attribute name="style">display:none;</attribute>
            </xpath>
            <xpath expr="//div[hasclass('footer')]" position="attributes">
                <attribute name="style">display:none;</attribute>
            </xpath>
        </template>

        <record id="paperformat_custom_invoice" model="report.paperformat">
            <field name="name">A4 invoice</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">34.5</field>
            <field name="margin_bottom">28</field>
            <field name="margin_left">11</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <record id="point_of_sale.pos_invoice_report" model="ir.actions.report">
            <field name="paperformat_id" eval="ref('pos_custom_invoice_report.paperformat_custom_invoice')"/>
