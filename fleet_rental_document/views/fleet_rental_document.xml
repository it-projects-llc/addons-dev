<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

      <menuitem name="Rental" parent="base.menu_base_partner" id="fleet_rental_sale" sequence="2"/>

      <record id='fleet_rental_document_form' model='ir.ui.view'>
        <field name="name">fleet.rental.document.form</field>
        <field name="model">fleet_rental.document</field>
        <field name="arch" type="xml">
          <form string="Vehicle Rent">
            <sheet>
              <group>
                <field name="name" class="oe_inline"/>
                <field name="partner_id"/>
              </group>
              <group col="2" string="Vehicle Information">
                <field name="vehicle_id"/>
                <field name="allowed_kilometer_per_day"/>
                <field name="rate_per_extra_km"/>
                <field name="daily_rental_price"/>
                <field name="exit_datetime" class="oe_inline"/>
                <field name="return_datetime" class="oe_inline"/>
                <field name="total_rental_period" class="oe_inline"/>
                <field name="check_line_ids" widget="one2many_list" colspan="4" nolabel="1" mode="tree" invisible="1">
                  <tree string="Vehicle checklist" editable="bottom" create="0" delete="false">
                    <field name="item_id" options='{"no_open": true}'/>
                      <field name="exit_check_yes"/>
                      <field name="exit_check_no"/>
                      <field name="return_check_yes"/>
                      <field name="return_check_no"/>
                  </tree>
                </field>
              </group>
              <group>
                <field name="part_line_ids" widget="svg" svg_file="/fleet_rental_document/static/src/img/car-cutout.svg" svg_colors='red:broken;original:operative' svg_id_field="path_ID" svg_color_field="state" nolabel = '1'/>
              </group>
              <group string="Payment Details">
                <field name="period_rent_price" class="oe_inline"/>
              </group>
            </sheet>
          </form>
        </field>
      </record>

      <record id='fleet_rental_document_act' model='ir.actions.act_window'>
        <field name="name">All Documents</field>
        <field name="res_model">fleet_rental.document</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to create a new rental document.
          </p>
        </field>
      </record>

      <menuitem action='fleet_rental_document_act' parent="fleet_rental_sale" id="fleet_rental_documents" sequence="10"/>

    </data>
</openerp>
