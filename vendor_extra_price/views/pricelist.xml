<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_pricelist_item_form_view_vendor" model="ir.ui.view">
        <field name="name">product.pricelist.item.form.vendor</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_form_view" />
        <field name="arch" type="xml">
            <field name="applied_on" position="after">
                <field
                    name="vendor_id"
                    attrs="{'invisible':[('applied_on', '!=', '4_product_vendor')],
                            'required':[('applied_on', '=', '4_product_vendor')]}"
                />
            </field>
        </field>
    </record>

</odoo>
