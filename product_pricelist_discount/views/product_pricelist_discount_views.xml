<?xml version="1.0"?>
<openerp>
    <data>
        <record id="product_pricelist_item_tree_view" model="ir.ui.view">
            <field name="name">product.pricelist.item.tree</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_tmpl_id']" position="after">
                    <field name="promotional_product_id"/>
                    <field name="promotional_product_quantity"/>
                </xpath>
            </field>
        </record>

        <record id="product_pricelist_item_form_view" model="ir.ui.view">
            <field name="name">product.pricelist.item.form</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]" position="inside">
                    <group>
                        <!-- For Base Products or Category-->
                        <field name="base_type" widget="radio" attrs="{'invisible':[('applied_on', '!=', '4_promotional_product')],'required':[('applied_on', '=', '4_promotional_product')]}"/>
                        <field name="promotional_product_tmpl_id" attrs="{'invisible':['|',('applied_on', '!=', '4_promotional_product'),('base_type', '!=', '1_product')],'required':[('applied_on', '=', '4_promotional_product'),('base_type', '=', '1_product')]}" string="Product"/>
                        <field name="base_pos_category_ids" attrs="{'invisible':['|',('applied_on', '!=', '4_promotional_product'),('base_type', '!=', '0_category')],'required':[('applied_on', '=', '4_promotional_product'),('base_type', '=', '0_category')]}" widget="many2many_tags" string="Category"/>
                        <field name="cumulative_quantity" attrs="{'invisible':['|',('applied_on', '!=', '4_promotional_product')]}"/>
                        <!-- For Total Order-->
                        <field name="amount_order_total" attrs="{'invisible':[('applied_on', '!=', '5_amount_order_total')],'required':[('applied_on', '=', '5_amount_order_total')]}" string="Total Amount"/>
                        <field name="total_discount_product" attrs="{'invisible':[('applied_on', '!=', '5_amount_order_total')],'required':[('applied_on', '=', '5_amount_order_total')]}"/>
                    </group>
                    <group>
                        <!-- For Promotional Product or Category-->
                        <field name="promotional_type" widget="radio" attrs="{'invisible':[('applied_on', '!=', '4_promotional_product')],'required':[('applied_on', '=', '4_promotional_product')]}" string="Promo Type"/>
                        <field name="promotional_product_id" attrs="{'invisible':['|',('applied_on', '!=', '4_promotional_product'),('promotional_type', '!=', '1_product')],'required':[('applied_on', '=', '4_promotional_product'),('promotional_type', '=', '1_product')]}" string="Promo Product"/>
                        <field name="promotional_pos_category_ids" attrs="{'invisible':['|',('applied_on', '!=', '4_promotional_product'),('promotional_type', '!=', '0_category')],'required':[('applied_on', '=', '4_promotional_product'),('promotional_type', '=', '0_category')]}" widget="many2many_tags" string="Promo Category"/>
                        <field name="promotional_product_quantity" attrs="{'invisible':[('applied_on', '!=', '4_promotional_product')],'required':[('applied_on', '=', '4_promotional_product')]}" string="Quantity"/>
                        <field name="status_quantity_included" invisible="True"/>
                        <field name="quantity_included"  attrs="{'invisible':[('status_quantity_included', '!=', True)]}" string="Quantity Included"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='min_quantity']" position="replace">
                    <field name="min_quantity" attrs="{'invisible':[('applied_on', '=', '5_amount_order_total')]}"/>
                </xpath>
            </field>
        </record>

        <record id="product_pricelist_view" model="ir.ui.view">
            <field name="name">product.pricelist.form</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='min_quantity']" position="after">
                    <field name="promotional_product_quantity" string="Promotion Quantity"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
