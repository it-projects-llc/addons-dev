<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="d151_report_view" model="ir.ui.view">
            <field name="name">D151 report</field>
            <field name="model">d151.wizard</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <group>
                        <group>
                            <field name="company_id"/>
                        </group>
                        <group>
                        </group>
                        <group>
                            <field name="date_from"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                        </group>
                        <field name="partner_ids" widget="many2many_tags"/>
                        <field name="cr_d151_category_ids" widget="many2many_tags"/>
                        <field name="show_details"/>
                    </group>
                    <footer>
                        <button name="print_xls_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        or 
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_account_d151_report" model="ir.actions.act_window">
            <field name="name">D151 statement</field>
            <field name="res_model">d151.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="d151_report_view"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_account_report_d151" name="D151 statement" action="action_account_d151_report" parent="account.menu_finance_legal_statement"/>


    </data>
</odoo>