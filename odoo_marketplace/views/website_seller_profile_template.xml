<odoo>
	<data noupdate="0">

        <template id="mp_seller_profile" name="Seller Profile">
			<t t-call="website.layout">
				<div class="oe_structure"/>
				<div id="wrap">
					<t t-set="avg_val" t-value="seller.avg_review()"/>
					<t t-set="total_reviews" t-value="len(seller.fetch_active_review(seller.id))"/>
					<div style="height: 320px;">
						<div class="carousel-inner">
							<t t-set="seller_profile_banner" t-value="seller.sudo().profile_banner"/>
							<t t-if="seller_profile_banner">
								<div class="item oe_img_bg oe_custom_bg active" t-attf-style="background-image: url('/marketplace/image/#{seller.id}/res.partner/profile_banner');width: 100%;height: -webkit-fill-available;background-size:100% 320px;"></div>
							</t>
							<t t-if="not seller_profile_banner">
								<div class="item oe_img_bg oe_custom_bg active" t-attf-style="background-image: url('/odoo_marketplace/static/src/img/dummy-banner.png');width: 100%;height: -webkit-fill-available;"></div>
							</t>
						</div>
					</div>
					<div class='container'>
						<div class="col-md-12" id="" style="border:1px solid #e3e3e3;padding-top:15px;padding-bottom:15px;">
							<div class="row">
								<div class="col-sm-3 hidden-xs hidden-sm">
									<t t-set="seller_profile_image" t-value="seller.sudo().profile_image"/>
									<t t-if="seller_profile_image">
										<div class="item oe_img_bg oe_custom_bg seller-profile-pic" t-attf-style="background-image: url('/marketplace/image/#{seller.id}/res.partner/profile_image');background-size:180px 180px;">
										</div>
									</t>
									<t t-if="not seller_profile_image">
										<div class="item oe_img_bg oe_custom_bg seller-profile-pic" t-attf-style="background-image: url('/odoo_marketplace/static/src/img/dummy-profile-pic.png')"/>
									</t>
								</div>
								<div class="col-md-4" id="seller_name_and_rating">
									<div class="row">
										<span style="font-size:20px;" title="Seller Name">
											<b><t t-esc="seller.name"/></b>
										</span>
										<t t-set="seller_add_state" t-value="seller.state_id"/>
										<t t-set="seller_add_country" t-value="seller.country_id"/>
										<t t-if="seller_add_state and seller_add_country">
											<div class="fa fa-map-marker" style="color:#656565;margin-left:15px;margin-top: 10px;" title="Seller Address">
												<span><t t-esc="seller_add_state.name"/>,
													<t t-esc="seller_add_country.name"/></span>
											</div>
										</t>
									</div>
									<div class="row">
										<t t-if="website.sudo().mp_seller_review">
											<a href="#rating_review_tab" id="open-review-tab">
												<span class="" style="display:inline-flex;">
													<input
														id="star-readonly"
														class="rating form-control d-none"
														t-attf-value="#{avg_val}"
														data-show-clear="false"
														data-show-caption="false"
														data-min="0"
														data-max="5"
														data-step="0.1"
														data-readonly="true"
														data-size="xs"
														data-symbol="&#xf005;"
														data-glyphicon="false"
														data-rating-class="rating-fa"/>
													<span style="padding: 7px;">
														(<t t-esc="total_reviews"/>
														<t t-if="total_reviews&gt;1">
															Reviews</t>
														<t t-if="total_reviews &lt; 2">
															Review</t>)</span>
												</span>
											</a>
										</t>
									</div>
								</div>
								<div class="col-md-5" id="vacant_div"/>
							</div>
							<div class="row" style="margin-top: 30px">
								<div class="col-md-12" style="color:#656565;">
									<span t-raw="seller.profile_msg"/>
								</div>
							</div>
							<t t-set="mp_seller_shop_id" t-value="seller.sudo().seller_shop_id"/>
							<div class="row" style="margin-top: 5px;margin-bottom: 5px;">
								<t t-if="website.sudo().mp_product_count">
									<div class="col-md-2">
										<span class="badge badge-pill badge-secondary fa fa-tags" aria-label="badge" style="padding:5px 10px;">
											<![CDATA[&nbsp;&nbsp;&nbsp;&nbsp;]]><t t-esc="seller.seller_products_count()"/>
											<![CDATA[&nbsp;]]>Products</span>
									</div>
								</t>
								<t t-if="website.sudo().mp_sale_count">
									<div class="col-md-2">
										<span class="badge badge-pill badge-secondary fa fa-line-chart" aria-label="badge" style="padding:5px 10px;">
											<![CDATA[&nbsp;&nbsp;&nbsp;&nbsp;]]><t t-esc="sales_count"/>
											<![CDATA[&nbsp;]]>Sales</span>
									</div>
								</t>
							</div>
							<div class="row" style="margin-top:5px;margin-bottom:5px;">
								<t t-if="website.sudo().mp_seller_since">
									<div class="col-md-4">
										<i>
											selling from
											<span style="">
												<b><span t-field="seller.create_date" t-options='{"format": "d MMMM y"}'/></b>
												to till now</span>
										</i>
									</div>
								</t>
							</div>
							<div class="row">
								<div class="col-md-3">
									<a t-attf-href="mailto:{{ seller.email }}" class="btn btn-primary">Send email to seller</a>
									<t t-if="website.sudo().get_group_mp_shop_allow()">
										<t t-if="mp_seller_shop_id and mp_seller_shop_id.website_published and mp_seller_shop_id.active">
											<a class="btn btn-primary" target="_blank" t-attf-href="/seller/shop/#{mp_seller_shop_id.url_handler}">Visit Shop</a>
										</t>
									</t>
								</div>
								<div class="col-md-6">
									<t t-foreach="seller.social_media_link_ids" t-as="social_media">
										<t t-if="social_media.wk_website_published">
											<div style='height:38px;width:38px;float:left;'>
												<a t-attf-href="{{social_media.complete_url}}" target="_blank">
													<span itemprop="image" t-field="social_media.social_media_id.image" t-options="{'widget': 'image'}" t-att-alt="social_media.social_media_id.name" t-attf-title="#{'Follow on ' + social_media.social_media_id.name}"/>
												</a>
											</div>
										</t>
									</t>
								</div>
								<div class="col-md-3">
									<a class="pull-right" target="_blank" href="/contactus" style="text-decoration: underline;">Contact Us about
										<t t-esc="seller.name"/>
									</a>
								</div>
							</div>
						</div>
					</div>
					<div class="clearfix mt16" id="seller-pannel"/>
					<div class="oe_structure"/>
					<div class='container mb16'>
						<div class="card with-mp-nav-tabs tabbable" id="seller-info-pannel">
							<div class="card-header" style="padding: 0.5rem;padding-bottom: 0;border-bottom: 0;">
								<ul class="nav nav-tabs" id="shop-nav-tabs">
									<li class="nav-item">
										<a href="#seller_all_prod" class="nav-link active" data-toggle="tab">
											<span>
												All Products
												<span class='badge badge-pill badge-secondary'><t t-esc="len(products)"/>
													Out Of
													<t t-esc="product_count"/>
												</span>
											</span>
										</a>
									</li>
									<t t-if="not website.sudo().get_group_mp_shop_allow() ">
										<li class="nav-item">
											<a href="#seller_recent_prod" class="nav-link" id="profile_recently_product_tab" data-toggle="tab">
												Recently Added Products
												<input type="hidden" name="seller_id" id="seller_id" t-att-value="int(seller.id)"/>
												<span class='badge badge-pill badge-secondary'><t t-esc="recent_prod"/></span>
											</a>
										</li>
									</t>
									<t t-if="website.sudo().mp_seller_review">
										<li class="nav-item">
											<a href="#rating_review_tab" class="nav-link" data-toggle="tab">
												Rating &amp; Reviews
											</a>
										</li>
									</t>
									<t t-if="website.sudo().mp_return_policy">
										<li class="nav-item">
											<a href="#return_policy_tab" class="nav-link" data-toggle="tab">
												Return Policy
											</a>
										</li>
									</t>
									<t t-if="website.sudo().mp_shipping_policy">
										<li class="nav-item">
											<a href="#shipping_policy_tab" class="nav-link" data-toggle="tab">
												Shipping Policy
											</a>
										</li>
									</t>
									<t t-if="website.sudo().mp_shipping_address">
										<li class="nav-item">
											<a href="#contact_us_tab" class="nav-link" data-toggle="tab">
												Seller Contact
											</a>
										</li>
									</t>
								</ul>
							</div>
							<div class="card-body">
								<div class="tab-content" id="shop-tab-content">
									<div class="tab-pane container active" id="seller_all_prod">
										<t t-call="odoo_marketplace.shop_recently_product"/>
										<div class="products_pager">
											<t t-call="website.pager"/>
										</div>
									</div>
									<t t-if="not website.sudo().get_group_mp_shop_allow() ">
										<div class="tab-pane" id="seller_recent_prod">
											<div class="products_pager">
												<t t-call="website.pager"/>
											</div>
										</div>
									</t>
									<div class="tab-pane container" id="return_policy_tab">
										<span t-raw="seller.return_policy"/>
										<!-- <div class="text-center text-muted">
											<h3 class="css_editable_display">Seller return policy is not defined.</h3>
										</div> -->
									</div>
									<div class="tab-pane container" id="rating_review_tab">
										<t t-set="seller_active_review" t-value="seller.fetch_active_review2(seller.id,0,website.mp_review_load_no)"/>
										<t t-call="odoo_marketplace.mp_seller_review_information"/>
										<t t-set="total_reviews" t-value="seller.fetch_active_review(seller.id)"/>
										<t t-if="seller_active_review">
											<div class="sort" id="seller_review_sort" style="padding-right: 20px;padding-left: 20px;">
												<nav class="navbar navbar-expand-lg navbar-light bg-light" style="padding:0px">
													 <div class="navbar-collapse">
														<ul class="nav" style="width:100%">
															<li class="nav-item" style="margin-top: 7px;">
																<div class="col-md-12">
																	<span class="">Displaying Reviews
																	<span class="badge badge-pill badge-secondary">
																		<span id="viewed">
																			<t t-esc="len(seller_active_review)"/>
																		</span>
																		of
																		<span id="total_seller_reviews">
																			<t t-esc="len(total_reviews)"/>
																		</span>
																	</span></span>
																</div>
															</li>
														</ul>
													<ul class="nav justify-content-end" style="width:100%">
														<li class="nav-item" style="margin-top: 10px;">
															<span class=""><i class="fa fa-random" style="margin-right:10px"></i> Sort By:</span>
														</li>
														<li class="nav-item active">
															<a class="nav-link active-sort-tab default-color" id="most_recent_tab">Most Recent</a>
														</li>
														<li class="nav-item">
															<a class="nav-link default-color" id="most_helpful_tab">Most Helpful</a>
														</li>
														<li class="nav-item " style="margin-top: 7px;">
															<span class=""><i class="fa fa-filter" style="margin-right:10px"></i> Filter By:</span>
														</li>
														<li class="nav-item" style="margin-top: 7px;margin-right:16px">
															<select class="form-control" style="margin-left: 15px;" id="select_star">
																<option value="-1">All Stars</option>
																<option value="5">5 Star</option>
																<option value="4">4 Star</option>
																<option value="3">3 Star</option>
																<option value="2">2 Star</option>
																<option value="1">1 Star</option>
															</select>
														</li>
													</ul>
												</div>
												</nav>
												<div class="clear"></div>
											</div>
										</t>
										<div class="row" id="seller_all_review">
											<div class="col-md-12 mp-box-review">
												<t t-set="seller_review_ids" t-value="seller_active_review"/>
												<t t-call="odoo_marketplace.mp_seller_review_template"/>
												<t t-if="len(seller_active_review) == 0">
													<div class="alert alert-info">
														<center>
															<strong>Review Not Found</strong>
														</center>
													</div>
												</t>
											</div>
											<div class="col-md-12 mp-box-review_loader" style="display:none;"/>
											<input type="hidden" name="limit" t-att-value="website.mp_review_load_no" id="limit"/>
											<input type="hidden" name="seller_id" t-att-value="seller.id" id="seller_id"/>
											<t t-set="total_viewed" t-value="len(seller_active_review)"/>
											<t t-if="total_viewed &lt; len(total_reviews)">
												<div id="mp-load-more-div" class="col-md-12 col-sm-12 col-xs-12">
													<button id="mp-load-morebtn" class="btn btn-lg btn-block mp-load-more-btn">Load more reviews...</button>
													<button id="mp-load-morebtn-loder" class="btn btn-lg btn-block mp-load-more-btn disabled" style="display:none">
														<i class="fa fa-spinner fa-pulse fa-1x fa-fw"></i>Loading more reviews...</button>
												</div>
											</t>
										</div>
									</div>
									<div class="tab-pane" id="shipping_policy_tab">
										<span t-raw="seller.shipping_policy"/>
									</div>
									<div class="tab-pane" id="contact_us_tab">
										<ul class="list-unstyled">
											<li t-ignore="true">
												<i class="fa fa-phone"></i>
												<label>Phone :
												</label>
												<span t-field="seller.phone"></span>
											</li>
											<li t-ignore="true">
												<i class="fa fa-mobile" style="font-size: 18px;margin-left: 3px;margin-right: 3px;"></i>
												<label>Mobile :
												</label>
												<span t-field="seller.mobile"></span>
											</li>
											<li t-ignore="true">
												<i class="fa fa-envelope"></i>
												<label>Email :
												</label>
												<span t-field="seller.email"></span>
											</li>
										</ul>
										<t t-if="seller_add_country">
											<iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" t-attf-src="https://maps.google.com/maps?q=#{seller_add_state.name},#{seller_add_country.name}&amp;output=embed"></iframe>
										</t>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="oe_structure"/>
				</div>
				<div class="oe_structure"/>
			</t>
			<script type="text/javascript" src="/odoo_marketplace/static/src/js/seller_ratting.js"></script>
			<script src="/odoo_marketplace/static/src/js/bootstrap-rating-input.min.js" type="text/javascript"></script>
			<script src="/odoo_marketplace/static/src/js/star-rating.js" type="text/javascript"></script>
			<script src="/odoo_marketplace/static/src/js/jquery.timeago.js" type="text/javascript"></script>
			<script src="/odoo_marketplace/static/src/js/jquery.circlechart.js" type="text/javascript"></script>
		</template>

        <template id="wk_seller_review_template">
			<!-- <link rel="stylesheet" href="/odoo_marketplace/static/src/css/marketplace.css" media="all" type="text/css"/> -->
			<t t-call="odoo_marketplace.mp_seller_review_template"/>
			<t t-if="len(seller_review_ids) == 0">
				<span>
					<center>Review Not Found</center>
				</span>
			</t>
			<script>
				$(".mp-js-rating").rating();
				$("abbr.timeago").timeago();
			</script>
		</template>

        <!-- Template For all seller  -->

		<template id="mp_seller_list" name="Seller List">
			<t t-call="website.layout">
				<div id="wrap">
					<div class="oe_structure"/>
					<div class="container">
						<div class="row">
							<div class="col-xs-12 mt8 mb8">
								<div class="text-center" style="font-size: 25px;font-weight: 600; margin-bottom: 20px; background-color: #d9edf7; border-color: #6CAFBD; color: #31708f; border: 1px solid; border-radius: 5px;">Our Sellers</div>
								<t t-foreach="all_shop" t-as="shop_obj">
									<div class="col-md-3 col-sm-6 col-xs-12 mt8 mb8">
										<div class="col-xs-12" style="border: 1px solid;padding-top: 10px;padding-bottom: 10px;">
											<div style="height:150px;width:auto;margin-bottom: 10px; display: block;margin-left: auto;margin-right: auto;">
												<span itemprop="image" t-field="shop_obj.shop_logo" t-options="{'widget': 'image', 'style':'border-radius:10px;margin:auto;height:150px;'}" t-att-alt="shop_obj.name"/>
											</div>
											<div class="row mb4" style="text-align: center;font-weight: 600;">
												<div class="col-xs-12">
													<span t-field="shop_obj.name"/>
												</div>
											</div>
											<div class="row" style="text-align:center">
												<t t-if="website.sudo().get_group_mp_shop_allow() ">
													<t t-if="shop_obj.sudo().active">
														<div class="col-xs-12">
															<a t-attf-href="/seller/shop/#{shop_obj.sudo().url_handler}" class="btn btn-primary mb4">Visit Shop</a>
														</div>
													</t>
												</t>
												<div class="col-xs-12">
													<a t-attf-href="/seller/profile/#{shop_obj.sudo().seller_id.url_handler if shop_obj.sudo().seller_id.url_handler else shop_obj.sudo().seller_id.id}" class="btn btn-primary">View Seller Profile</a>
												</div>
											</div>
										</div>
									</div>
								</t>
								<t t-if="not all_shop">
									<div class="text-center text-muted">
										<h3 class="css_editable_display">Seller not found.</h3>
									</div>
								</t>
							</div>
						</div>
					</div>
					<div class="oe_structure"/>
				</div>
			</t>
		</template>

        <!-- Seller item -->
		<template id="seller_list_item" name="Seller List Item">
			<div itemscope="itemscope">
				<div class="wk_ribbon-wrapper">
					<div class="wk_ribbon btn btn-danger">Best Seller</div>
				</div>
				<div class="row col-xs-12 ml0 mr0" style="padding:10px;">
					<div class="col-xs-5" style="padding:0px">
						<div style="">
							<a itemprop="url" t-attf-href="/seller/profile/#{seller_obj.sudo().url_handler if seller_obj.sudo().url_handler else seller_obj.sudo().id}">
								<t t-if="seller_obj.sudo().profile_image">
									<span
										itemprop="image"
										t-field="seller_obj.sudo().profile_image"
										t-options="{'widget': 'image', 'style':'height: 100px;width: 100px;border: 5px solid;border-radius: 4px;border-color: rgb(73, 73, 73);', 'zoom': 'image', 'class':''}"
										t-att-alt="seller_obj.sudo().name"/>
								</t>
								<t t-if="not seller_obj.sudo().profile_image">
									<img t-att-alt="seller_obj.sudo().name" style='height: 100px;width: 100px;border: 5px solid;border-radius: 4px;border-color: rgb(73, 73, 73);' t-attf-src="/odoo_marketplace/static/src/img/dummy-profile-pic.png"/>
								</t>
							</a>
						</div>
					</div>
					<div class="col-xs-7" style="padding: 0px 5px 0px 5px;">
						<div class="" style="padding-right: 0px;" id="seller_name">
							<strong>
								<a itemprop="name" class="grid-seller-name" t-attf-href="/seller/profile/#{seller_obj.sudo().url_handler if seller_obj.sudo().url_handler else seller_obj.sudo().id}" t-field="seller_obj.sudo().name"/>
							</strong>
						</div>
						<div id="seller_review"></div>
						<div id="seller_other_info"></div>
					</div>
				</div>

				<t t-if="website.sudo().get_group_mp_shop_allow() ">
					<t t-set="mp_seller_shop_id" t-value="seller_obj.sudo().seller_shop_id"/>
					<t t-if="mp_seller_shop_id and mp_seller_shop_id.website_published and mp_seller_shop_id.active">
						<div class="col-xs-12" style="padding:10px;" id="seller_shop">
							<div class="container-fluid" style="background-color:rgb(207, 233, 255);border-radius: 3px;">
								<div style="color:rgb(41, 121, 183);">
									<i class="fa fa fa-home mt4"/>
									<span class="seller-shop-name">
										<!-- <t t-esc="mp_seller_shop_id.name"/> -->
										<a t-attf-href="/seller/shop/#{mp_seller_shop_id.sudo().url_handler}"><t t-esc="mp_seller_shop_id.name"/></a>
									</span>
								</div>
								<div class="mb4 shop-tag-line">
									<t t-if="mp_seller_shop_id">
										<span><t t-esc="mp_seller_shop_id.shop_tag_line"/></span>
									</t>
								</div>
							</div>
						</div>
					</t>
				</t>
				<div class="col-xs-12">
					<a class="pull-right view-profile" itemprop="name" t-attf-href="/seller/profile/#{seller_obj.sudo().url_handler if seller_obj.sudo().url_handler else seller_obj.sudo().id}">
