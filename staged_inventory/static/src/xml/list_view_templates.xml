<templates id="template" xml:space="preserve">

    <t t-extend="ListView">
        <t t-jquery="t[t-foreach='columns']:first" t-operation='before'>
            <t t-if="dataset &amp;&amp; dataset.model == 'stock.inventory.line'">
                <th>
                    #
                </th>
            </t>
        </t>
    </t>

    <t t-extend="ListView.row">
        <t t-jquery="t[t-foreach='columns']:first" t-operation='before'>
            <t t-if="dataset.model == 'stock.inventory.line'">
                <td>
                    <t t-esc="index + 1"/>
                </td>
            </t>
        </t>
    </t>

</templates>
