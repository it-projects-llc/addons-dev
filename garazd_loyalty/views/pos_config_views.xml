<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="pos_config_view_form_inherit_garazd_loyalty" model="ir.ui.view">
        <field name="name">pos.config.view.form.inherit.garazd.loyalty</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='posbox_reference']" position="after">
                <h2 name="loyalty">Loyalty System</h2>
                <div class="row mt16 o_settings_container" groups="garazd_loyalty.loyalty_group_user">
                    <div class="col-xs-12 col-md-6 o_setting_box" id="loyalty_system">
                        <div class="o_setting_left_pane">
                            <field name="loyalty_card_offer"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="loyalty_card_offer"/>
                            <div class="text-muted">
                                Offer loyalty card issue for customers
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
