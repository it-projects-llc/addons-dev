<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_garazd_loyalty" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.garazd.loyalty</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='point_of_sale']" position="inside">
                <h2>Loyalty System</h2>
                <div class="row mt16 o_settings_container" groups="garazd_loyalty.loyalty_group_user">
                    <div class="col-12 col-lg-6 o_setting_box" title="This amount defines a minimal customer buy for loyalty card issue.">
                        <div class="o_setting_right_pane">
                            <div>
                                <label for="amount_for_card"/>
                                <div class="text-muted">
                                    Minimum One-time Purchase Amount for issuing a discount card
                                </div>
                                <div class="content-group mt16">
                                    <field name="amount_for_card" colspan="4" nolabel="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
